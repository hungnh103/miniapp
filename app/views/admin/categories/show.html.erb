<% provide :title, "Show Category" %>

<%= link_to raw("<span class='glyphicon glyphicon-arrow-left'></span> Go back"),
  admin_categories_path, class: "btn btn-info" %>
<h1>Category Info</h1>

<table class="table table-bordered">
  <tr>
    <td>Name</td>
    <td><%= @category.name %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @category.description %></td>
  </tr>
  <tr>
    <td>News</td>
    <td>
      <% if @category.news.any? %>
        <ul>
          <% @category.news.order(created_at: :desc).each do |news| %>
            <li><%= link_to news.title, admin_news_path(news) %></li>
          <% end %>
        </ul>
      <% else %>
      No news
      <% end %>
    </td>
  </tr>
</table>
